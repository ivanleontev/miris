<script>

function func() {
var a = Number(document.getElementById('a').value, 10);
var b = Number(document.getElementById('b').value, 10);
if (!isNaN(a) && !isNaN(b)) {
var c = a / b;
alert(c);
} else {
alert("введите числа: ");
}
}
</script>

<input id="a" type="text" size="10"> ÷ <input id="b" type="text" size="10"><br>
<input type="button" value="разделить числа"
onclick="func();"><br>
